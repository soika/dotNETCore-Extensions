    <AssemblyName>Pomelo.AspNetCore.Common</AssemblyName>
    <PackageId>Pomelo.AspNetCore.Common</PackageId>
    <PackageIconUrl>https://avatars2.githubusercontent.com/u/19828814?v=3</PackageIconUrl>
    <PackageProjectUrl>https://github.com/soika/dotNETCore-Extensions</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/soika/dotNETCore-Extensions/blob/master/LICENSE</PackageLicenseUrl>
